%------------------------------------------------------%
% Dynamics of linear λ-calculus
%------------------------------------------------------%

% de Bruijn indices

LF step : tm → tm → type =
  | s/app1 : step M M' → step (app M N) (app M' N)
  | s/app2 : step N N' → step (app M N) (app M N')
  | s/lam : step M M' → step (lam M) (lam M')
  | s/red : sh_up N zero N' → subst zero N' M M' → sh_d M' zero M''
  	→ step (app (lam M) N) M''
  ;