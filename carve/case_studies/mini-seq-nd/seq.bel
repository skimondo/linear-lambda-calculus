%------------------------------------------------------%
% Sequent calculus
%------------------------------------------------------%

LF seq : lctx → tp → type =

% Hypotheses

| hyp :
   rmv Δ _ A lin _ Δ' → exh Δ'
  → seq Δ A

% Multiplicatives

| R-o :
    ({x:var} seq (cons Δ x A lin) B)
  → seq Δ (A -o B)

| L-o :
    rmv Δ _ (A -o B) lin _ Δ'
  → merge Δ₁ Δ₂ Δ'
  → seq Δ₁ A
  → ({x:var} seq (cons Δ₂ x B lin) C)
  → seq Δ C;